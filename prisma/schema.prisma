// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum RunKind {
  GENERATE
  REVISE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Brief {
  id         String   @id @default(cuid())
  pageType   String   // آموزشی|خدماتی|محصول‌محور
  domain     String   // متن آزاد؛ مرحله ۲
  goal       String   // جمله‌ی هدف؛ مرحله ۳
  audience   String?  // پرسونا (اختیاری)
  tone       String?  // رسمی|خودمونی|فان|الهام‌بخش
  guardrails String[] // اختیاری
  weeklyCap  Int?
  createdAt  DateTime @default(now())
  runs       Run[]
}

model Template {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  description   String
  inputsSchema  Json
  systemPrompt  String
  userTemplate  String
  constraints   Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  runs          Run[]
}

model Hook {
  id        String   @id @default(cuid())
  text      String
  tag       String?
  createdAt DateTime @default(now())
}

model ViralSignal {
  id        String   @id @default(cuid())
  label     String
  content   String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Run {
  id         String    @id @default(cuid())
  kind       RunKind   @default(GENERATE)
  parentId   String?
  templateId String
  briefId    String?
  inputs     Json
  rawPrompt  String
  output     Json
  checks     Json
  score      Int?
  createdAt  DateTime  @default(now())
  template   Template  @relation(fields: [templateId], references: [id])
  brief      Brief?    @relation(fields: [briefId], references: [id])
}
